  numbers=left,                    % umiejscowienie numeracji linii kodu (po lewej, prawie)
  numbersep=5pt,                   % odległość numeracji linii od ramki
  numberstyle=\tiny\color{black},  % ustawienia rozmiaru itp, dla numeracji linii
