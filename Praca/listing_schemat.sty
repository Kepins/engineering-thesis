\lstdefinestyle{matlab}{
  backgroundcolor=\color{WhitePG},   % kolor tła dla listingu
  basicstyle=\linespread{1}\footnotesize,  % rozmiar czcionki dla kodu w listingu
  breakatwhitespace=false,         % ustawienie białej spacji
  breaklines=true,                 % automatyczne łamanie linii
